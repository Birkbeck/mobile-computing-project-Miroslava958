<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_categories"
                android:textSize="32sp"
                android:textColor="#0D5BA5"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Breakfast -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/breakfast"
                    android:contentDescription="@string/breakfast_icon_desc" />

                <Button
                    android:id="@+id/btnBreakfast"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/breakfast"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:backgroundTint="#FFA500"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Brunch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/brunch"
                    android:contentDescription="@string/brunch_icon_desc" />

                <Button
                    android:id="@+id/btnBrunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/brunch"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:backgroundTint="#FFA500"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Lunch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lunch"
                    android:contentDescription="@string/lunch_icon_desc" />

                <Button
                    android:id="@+id/btnLunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lunch"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:backgroundTint="#FFA500"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Dinner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/dinner"
                    android:contentDescription="@string/dinner_icon_desc" />

                <Button
                    android:id="@+id/btnDinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dinner"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:backgroundTint="#FFA500"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Dessert -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/dessert"
                    android:contentDescription="@string/dessert_icon_desc" />

                <Button
                    android:id="@+id/btnDessert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dessert"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:backgroundTint="#FFA500"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Others -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/others"
                    android:contentDescription="@string/others_icon_desc" />

                <Button
                    android:id="@+id/btnOthers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/others"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:backgroundTint="#FFA500"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#FFFFFF"
        android:paddingTop="8dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btnMainAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back"
            android:backgroundTint="#FFA500" />
    </LinearLayout>
</RelativeLayout>